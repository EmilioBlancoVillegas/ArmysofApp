<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArmySOF.Views.NewGamePage" 
             Title="Nueva Partida">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="10, 30, 10, 0">
                <Label Text="Titulo"/>
                <Entry x:Name="txtName"/>
                <Label Text="Lugar"/>
                <Entry x:Name="txtPlace" />
                <Label Text="Guión"/>
                <Editor x:Name="txtScript" HeightRequest="150"/>
                <Label Text="Fecha"/>
                <DatePicker x:Name="date" Format="dd/MM/yyyy"/>
                <Label Text="Hora"/>
                <TimePicker x:Name="time" Format="HH:mm"/>
                <Button Text="Crear Partida" Clicked="Button_Clicked"/>
            </StackLayout>
        </ScrollView>       
    </ContentPage.Content>
</ContentPage>