<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArmySOF.Views.NewGamePage" 
             Title="Nueva Partida">
    <ContentPage.Content>
        <StackLayout Margin="10, 10, 10, 0">
            <Entry x:Name="txtName" Placeholder="Nombre de la partida"/>
            <Entry x:Name="txtPlace" Placeholder="Lugar de la partida" />
            <DatePicker x:Name="date" Format="dd/MM/yyyy"/>
            <TimePicker x:Name="time" Format="HH:mm:ss"/>
            <Button Text="Crear Partida" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>